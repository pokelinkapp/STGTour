@inherits GTourStepComponent

@if (IsActiveStep) {
    <div @attributes=UnmatchedAttributes data-gtourstep-wrapper="@StepName" @ref="StepWrapperElement"
         class="guided-tour-step-wrapper @SelectedTheme.GTourStepWrapper @WrapperClass">

        @if (!string.IsNullOrEmpty(Title) || HeaderContent != null) {
            <div data-gtourstep-header-wrapper="@StepName"
                 class="guided-tour-step-header @SelectedTheme.GTourStepHeaderWrapper @HeaderClass">
                @if (!string.IsNullOrEmpty(Title)) {
                    <span data-gtourstep-header="@StepName" class="@SelectedTheme.GTourStepHeaderTitle">@Title</span>
                } else {
                    @HeaderContent(this)
                }
            </div>
        }

        <div data-gtourstep-content-wrapper="@StepName"
             class="guided-tour-step-content @SelectedTheme.GTourStepContentWrapper @ContentClass">
            @ChildContent(this)
        </div>

        <div data-gtourstep-footer-wrapper="@StepName"
             class="guided-tour-step-footer @SelectedTheme.GTourStepFooterWrapper @FooterClass">
            @if (FooterContent != null) {
                @FooterContent(this)
            } else {
                if (!ParentComponent.IsOnLastStep) {
                    <button data-gtourstep-cancel-button="@StepName" hidden="@(!CanCancelTour)"
                            class="cancel-button @SelectedTheme.GTourStepCancelButton @CancelTourButtonClass"
                            type="button"
                            @onclick="@OnCancelTourClick">
                        <span>@CancelTourButtonText</span>
                    </button>
                }

                if (!ParentComponent.IsOnFirstStep) {
                    <button data-gtourstep-previous-button="@StepName" hidden="@IsFirstStep"
                            class="previous-button @SelectedTheme.GTourStepPreviousButton @PreviousStepButtonClass"
                            type="button" @onclick="@OnPreviousStepClick">
                        <span>@PreviousStepButtonText</span>
                    </button>
                }

                if (!ParentComponent.IsOnLastStep) {
                    <button data-gtourstep-next-button="@StepName" hidden="@(IsLastStep)"
                            class="next-button @SelectedTheme.GTourStepNextButton @NextStepButtonClass" type="button"
                            @onclick="@OnNextStepClick">
                        <span>@NextStepButtonText</span>
                    </button>
                }

                if (ParentComponent.IsOnLastStep) {
                    <button data-gtourstep-complete-button="@StepName" hidden="@(!IsLastStep)"
                            class="complete-button @SelectedTheme.GTourStepCompleteButton @CompleteTourButtonClass"
                            type="button" @onclick="@OnCompleteTourClick">
                        <span>@CompleteTourButtonText</span>
                    </button>
                }
            }
        </div>
    </div>
}

